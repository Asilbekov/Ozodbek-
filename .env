# Aetherium Environment Configuration
# This file will be auto-generated by the configuration system
# To use real values, set them as environment variables

# Database Configuration
POSTGRES_DB=aetherium
POSTGRES_USER=aetherium_user
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://aetherium_user:your_secure_password_here@database:5432/aetherium

# JWT Configuration
JWT_SECRET_KEY=your_very_secure_jwt_secret_key_here_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Encryption Key for sensitive data (bank card numbers, etc.)
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Click Payment API Configuration
CLICK_MERCHANT_ID=your_click_merchant_id
CLICK_SERVICE_ID=your_click_service_id
CLICK_SECRET_KEY=your_click_secret_key
CLICK_API_URL=https://api.click.uz/v2

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# SMS Configuration (for verification)
SMS_API_KEY=your_sms_api_key_here
SMS_API_URL=https://api.sms.uz/v1

# Edge TTS Configuration (usually no API key needed)
EDGE_TTS_VOICE_RATE=+0%
EDGE_TTS_VOICE_PITCH=+0Hz

# Backend API Configuration
BACKEND_API_URL=http://backend-api:8000
MODEM_MANAGER_URL=http://modem-manager:8001

# CORS Configuration
CORS_ORIGINS=["http://localhost:12000"]
# Logging Configuration
LOG_LEVEL=INFO

# Hardware Configuration
MAX_CONCURRENT_SESSIONS=40
MODEM_SCAN_INTERVAL=30

# Audio Processing Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE=1024

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
